@using TrustSystems3
@model TrustSystems3.AdminWeb.Models.DashboardViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-lg-12 text-center m-t-md">
        <h2>
            Welcome to TrustSystems Admin
        </h2>
        <br/>
        <br />
    </div>
</div>

<div class="row">
    <div class="col-md-3 animated-panel zoomIn" style="animation-delay: 0.4s;">
        <div class="hpanel">
            <div class="panel-body">
                <div class="stats-title pull-left">
                    <h4>Reviews</h4>
                </div>
                <div class="stats-icon pull-right">
                    <i class="pe-7s-chat fa-4x"></i>
                </div>
                <div class="m-t-xl">
                    <h1 class="text-success">@Model.ReviewsCount</h1>
                    <small>
                        Количество всех отзывов в проекте на текущий момент. Считаются даже не подтвержденные модератором.
                    </small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 animated-panel zoomIn" style="animation-delay: 0.4s;">
        <div class="hpanel">
            <div class="panel-body">
                <div class="stats-title pull-left">
                    <h4>Companies</h4>
                </div>
                <div class="stats-icon pull-right">
                    <i class="pe-7s-share fa-4x"></i>
                </div>
                <div class="m-t-xl">
                    <h1 class="text-info">@Model.CompaniesCount</h1>
                    <small>
                        Отображает количество компаний зарегестрированных в проекте на текущий момент.
                    </small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 animated-panel zoomIn" style="animation-delay: 0.5s;">
        <div class="hpanel">
            <div class="panel-body">
                <div class="stats-title pull-left">
                    <h4>Users</h4>
                </div>
                <div class="stats-icon pull-right">
                    <i class="pe-7s-users fa-4x"></i>
                </div>
                <div class="m-t-xl">
                    <h1 class="text-warning">@Model.UsersCount</h1>
                    <small>
                        Зарегестрировано <strong>2 администратора</strong>, <strong>60 бизнес-аккаунтов</strong> и 
                        <strong>200 клиентов</strong> (обозревателей).
                    </small>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 animated-panel zoomIn" style="animation-delay: 0.5s;">
        <div class="hpanel">
            <div class="panel-body">
                <div class="stats-title pull-left">
                    <h4>Messages</h4>
                </div>
                <div class="stats-icon pull-right">
                    <i class="pe-7s-attention fa-4x"></i>
                </div>
                <div class="m-t-xl">
                    <h1 class="text-danger">680</h1>
                    <small>
                        Lorem Ipsum is simply dummy text of the printing and <strong>typesetting industry</strong>. Lorem Ipsum has been.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">

    <div class="col-lg-3">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    <a class="closebox"><i class="fa fa-times"></i></a>
                </div>
                Invite activity
            </div>
            <div class="panel-body list">

                <div class="stats-title pull-left">
                    <h4>Invites</h4>
                </div>
                <div class="stats-icon pull-right">
                    <i class="pe-7s-ticket fa-4x"></i>
                </div>
                <div class="m-t-xl">
                    <span class="font-bold no-margins">
                        By status
                    </span>
                    <br>
                    <small>
                        Количество отзывов по статусу и процентная доля.
                    </small>
                </div>

                <div class="list-item-container">
                    <div class="list-item">
                        <h3 class="no-margins font-extra-bold text-color3">2,773</h3>
                        <small>Pending</small>
                        <div class="pull-right font-bold">
                            98% <i class="fa fa-level-up text-success"></i>
                        </div>
                    </div>
                    <div class="list-item">
                        <h3 class="no-margins font-extra-bold text-success">4,422</h3>
                        <small>Sent email</small>
                        <div class="pull-right font-bold">
                            13% <i class="fa fa-level-down text-color3"></i>
                        </div>
                    </div>
                    <div class="list-item">
                        <h3 class="no-margins font-extra-bold text-danger">9,180</h3>
                        <small>Error</small>
                        <div class="pull-right font-bold">
                            22% <i class="fa fa-bolt text-color3"></i>
                        </div>
                    </div>
                    <div class="list-item">
                        <h3 class="no-margins font-extra-bold text-warning">1,450</h3>
                        <small>Canceled</small>
                        <div class="pull-right font-bold">
                            44% <i class="fa fa-level-up text-success"></i>
                        </div>
                    </div>
                    <div class="list-item">
                        <h3 class="no-margins font-extra-bold text-info">9,180</h3>
                        <small>Reviewed</small>
                        <div class="pull-right font-bold">
                            22% <i class="fa fa-bolt text-color3"></i>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-9">
        <div class="hpanel">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                    <a class="closebox"><i class="fa fa-times"></i></a>
                </div>
                Logger activity
            </div>
            <div class="panel-body list">
                <div class="table-responsive project-list">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th colspan="2">Project</th>
                                <th>Time</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var log in Model.Logs)
                        {
                            <tr>
                                <td>@log.Id</td>
                                <td>
                                    @log.Message
                                    <br />
                                    <small><i class="fa fa-clock-o"></i> Created <b>@log.Date.ToString("d")</b></small>
                                </td>
                                <td>@log.Date.ToString("t")</td>
                                <td><label class="btn btn-@log.Type">@Enum.GetName(typeof(LogType), log.Type).Replace("Scheduler", "")</label></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</div>