@model IEnumerable<TrustSystems3.CompanyWeb.Models.ModelEntity.UserReview>
@{
    ViewBag.Title = "Reviews";
}

<h1>Reviews</h1>
<br />


<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button data-target="#bs-example-navbar-collapse-2" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>

        <div id="bs-example-navbar-collapse-2" class="collapse navbar-collapse">
            <ul class="nav navbar-nav" style="overflow: visible;">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Find by <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">User Name</a></li>
                        <li><a href="#">Link</a></li>
                        <li><a href="#">Email address</a></li>
                    </ul>
                </li>
            </ul>

            <form role="search" class="navbar-form navbar-left">
                <div class="form-group">
                    <input type="text" placeholder="Search" class="form-control">
                </div>
                <button class="btn btn-default" type="submit">Filter items</button>
            </form>
        </div>
    </div>
</nav>

@foreach (var item in Model)
{
    <div class="row review">
        <div class="col-md-3 text-center">
            <ul class="rate pull-left">
                @for (int i = 0; i < item.Review.Rating; i++) {
                    <li><a href="#"></a></li>
                }
            </ul>
            <div class="clearfix"></div>
            @if (item.User != null)
            {
                <p><a href="/reviews/@item.User.Id">@item.User.UserName</a>
                </p>
            }
            else
            {
                <p class="text-danger"><strong>Анонимно</strong></p>
            }
        </div>
        <div class="col-md-6">
            <strong>@item.Review.ReviewShort</strong>
            <p>@item.Review.ReviewFull</p>

            <ul class="links">
                <li><a href="#"><span class="glyphicon glyphicon-share"></span> Поделиться</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-envelope"></span> Ответить</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-flag"></span> Сообщить</a></li>
            </ul>
        </div>
        <div class="col-md-3 review-date">
            <p>
                Размещен: @item.Review.DateUpdated.Value.ToString("D")<br />
                Номер заказа: @item.Review.Id
            </p>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12 text-center">
        <h2 class="title">У вас нет отзывов!</h2>
        <p>Пришло время пригласить еще клиентов оставить отзывы о вашей компании.</p>
        <br />
        @Html.ActionLink("Получите новые отзывы", "InviteCustomers", "Invitations", null, 
            new { @class = "btn btn-primary btn-lg" })
    </div>
    <br />
    <br />
</div>