    <div class="img">
        <img alt="" src="@Model.UserAvatar"/>
    </div>

    <div class="title">
        @Html.Raw(TagBuilderHelper.GetUserLink(Model.User))<br/> @Localization.Client.LabelPublished @Model.UserReviewsCount @Localization.Client.LabelReviews
        <p class="company-name">@Localization.Client.LabelAbout @Html.Raw(TagBuilderHelper.GetCompanyLink(Model.Review.Companies))</p>
        <ul class="rate">

            @for (int i = 0; i < Model.Review.Rating; i++) {
                <li><a href="#"></a></li>
            }
        </ul>
    </div>

    <div class="post-time">
        @Html.Raw(Model.Review.ReviewFull)
    </div>
    @if (Model.Review.DatePublished.HasValue)
    {
        <div class="time-ago">
            <i class="fa fa-clock-o"></i> @Model.Review.DatePublished.Value.ToString("d")
        </div>
    }
</li>