            var str = "<iframe src='http://localhost:29216/badge/reviews?companyId="
                + id
                + "' width='400' height='825' scrolling='no' frameborder='0' align='left'>Ваш браузер не поддерживает плавающие фреймы!</iframe>";

            alert(str);
        });

    });
</script>