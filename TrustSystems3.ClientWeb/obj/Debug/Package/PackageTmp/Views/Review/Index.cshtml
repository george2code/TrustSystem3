            $.ajax({
                url: '@Url.Action("Index", "Badge")',
                type: "GET",
                dataType: 'text',
                data: { companyId: id }
            }).done(function(data) {
                alert(data);
            });
        });

        $('#btn_reviews').click(function(e) {
